{
  "name": "@umkm/root",
  "version": "1.0.0",
  "private": true,
  "description": "UMKM Multi-Tenant Monorepo - Enterprise Setup",
  "author": "Fibidy",
  "license": "MIT",
  "packageManager": "pnpm@9.15.4",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=9.0.0"
  },
  "scripts": {
    "quickstart": "just quickstart",
    "prepare": "husky",
    "dev": "pnpm --parallel -r dev",
    "dev:client": "pnpm --filter=client dev",
    "dev:client-web": "pnpm --filter=client-web dev",
    "dev:server": "pnpm --filter=server start:dev",
    "build": "pnpm -r build",
    "build:client": "pnpm --filter=client build",
    "build:client-web": "pnpm --filter=client-web build",
    "build:server": "pnpm --filter=server build",
    "lint": "pnpm -r lint",
    "lint:fix": "pnpm -r --if-present lint:fix",
    "lint:root": "eslint .",
    "typecheck": "pnpm -r --if-present typecheck",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md,yml,yaml}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md,yml,yaml}\"",
    "test": "pnpm -r --if-present test",
    "test:coverage": "pnpm -r --if-present test:coverage",
    "check": "pnpm format:check && pnpm lint && pnpm typecheck",
    "check:fix": "pnpm format && pnpm lint:fix && pnpm typecheck",
    "db:generate": "cd server && pnpm exec prisma generate",
    "db:push": "cd server && pnpm exec prisma db push --skip-generate",
    "db:seed": "cd server && pnpm run prisma:seed",
    "clean": "pnpm --recursive exec rm -rf node_modules dist .next build coverage",
    "clean:install": "pnpm clean && rm -rf node_modules pnpm-lock.yaml && pnpm install",
    "validate": "pnpm install --frozen-lockfile && pnpm check && pnpm test"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/eslintrc": "^3.3.3",
    "@eslint/js": "^9.39.2",
    "eslint": "^9.39.2",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.2",
    "prettier": "^3.4.2",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.53.1"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{js,jsx,mjs,cjs}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  }
}
