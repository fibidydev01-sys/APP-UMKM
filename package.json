{
  "name": "@umkm/root",
  "version": "1.0.0",
  "private": true,
  "description": "UMKM Multi-Tenant Monorepo - Enterprise Setup",
  "author": "Fibidy",
  "license": "MIT",
  "packageManager": "pnpm@9.15.4",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=9.0.0"
  },
  "scripts": {
    "quickstart": "just quickstart",
    "prepare": "husky",
    "dev": "turbo dev",
    "dev:client": "turbo dev --filter=@umkm/client",
    "dev:client-web": "turbo dev --filter=@umkm/client-web",
    "dev:server": "turbo start:dev --filter=@umkm/server",
    "build": "turbo build",
    "build:client": "turbo build --filter=@umkm/client",
    "build:client-web": "turbo build --filter=@umkm/client-web",
    "build:server": "turbo build --filter=@umkm/server",
    "lint": "turbo lint",
    "lint:fix": "turbo lint:fix",
    "lint:root": "eslint .",
    "typecheck": "turbo typecheck",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md,yml,yaml}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md,yml,yaml}\"",
    "test": "turbo test",
    "test:coverage": "turbo test:coverage",
    "check": "pnpm format:check && pnpm lint && pnpm typecheck",
    "check:fix": "pnpm format && pnpm lint:fix && pnpm typecheck",
    "clean": "pnpm --recursive exec rm -rf node_modules dist .next build coverage",
    "clean:install": "pnpm clean && rm -rf node_modules pnpm-lock.yaml && pnpm install",
    "validate": "pnpm install --frozen-lockfile && pnpm check && pnpm test"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/eslintrc": "^3.3.3",
    "@eslint/js": "^9.39.2",
    "eslint": "^9.39.2",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.2",
    "prettier": "^3.4.2",
    "turbo": "^2.7.5",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.53.1"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{js,jsx,mjs,cjs}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  }
}
